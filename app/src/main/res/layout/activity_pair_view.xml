<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.riverside.skeleton.kotlin.widget.containers.PairView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/imagegrid_delete_image"
                android:padding="32dp"
                app:pv_firstText="AA"
                app:pv_firstViewStyle="@style/PairViewFirstText"
                app:pv_secondText="BB"
                app:pv_secondViewStyle="@style/PairViewSecondText" />

        <com.riverside.skeleton.kotlin.widget.containers.PairView
                android:id="@+id/pv_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:pv_firstText="AA"
                app:pv_secondText="BB"
                android:orientation="vertical" />

        <com.riverside.skeleton.kotlin.widget.containers.PairView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                app:pv_firstImage="@mipmap/ic_launcher"
                app:pv_firstImageSize="48dp"
                app:pv_firstViewStyle="@style/PairViewFirstText"
                app:pv_secondText="BB"
                app:pv_secondViewStyle="@style/PairViewSecondText" />
    </LinearLayout>
</LinearLayout>